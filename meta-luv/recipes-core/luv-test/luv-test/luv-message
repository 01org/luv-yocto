print_line()
{
    while read line ; do
    case $line in
        *+* )
        echo "[    `cut -d " " -f 1 /proc/uptime`0000]  $line"
        ;;
        * )
        echo "[    `cut -d " " -f 1 /proc/uptime`0000] $line"
        ;;
    esac
    done
}

luv_msg_write() {
    /bin/plymouth display-message --text="$1"

    if [ $# == 2 ]; then
         sleep $2
         luv_msg_hide $1
    fi

    echo "$1" >&2

    if [ ! -z ${LUVDEBUG} ]; then
        echo LUV_MESSAGE-$1>> ${LUV_SAVE_RESULTS_DIR}luv-debug.log
    fi
}

luv_msg_hide() {
    /bin/plymouth hide-message --text="$1"
}
